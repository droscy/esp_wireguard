{
   "name": "esp_wireguard",
   "version": "0.0.0-dev4",
   "description": "WireGuard implementation for esphome",
   "keywords":[
      "wireguard",
      "esp32",
      "esphome",
      "espidf"
   ],
   "repository":{
      "type": "git",
      "url": "https://github.com/droscy/esp_wireguard",
      "branch": "esphome/dev"
   },
   "authors":[
      {
         "name": "Daniel Hope",
         "email": "daniel.hope@smartalock.com",
         "url": "https://github.com/smartalock"
      },
      {
         "name": "Kenta Ida",
         "email": "fuga@fugafuga.org"
      },
      {
         "name": "Tomoyuki Sakurai",
         "email": "y@trombik.org",
         "url": "https://github.com/trombik"
      },
      {
         "name": "Matthew Dempsky"
      },
      {
         "name": "D. J. Bernstein"
      },
      {
         "name": "Simone Rossetto",
         "email": "simros85@gmail.com",
         "maintainer": true
      }
   ],
   "license": "BSD-3-Clause",
   "frameworks":[
      "esp8266-rtos-sdk",
      "espidf",
      "arduino"
   ],
   "include":[
      "include/*",
      "src/*"
   ],
   "build":{
      "includeDir": "include",
      "srcDir": "src",
      "flags": [
         "-DCONFIG_WIREGUARD_ESP_NETIF",
         "-DCONFIG_WIREGUARD_MAX_PEERS=1",
         "-DCONFIG_WIREGUARD_MAX_SRC_IPS=2",
         "-DCONFIG_MAX_INITIATIONS_PER_SECOND=2",
         "-DCONFIG_WIREGUARD_x25519_IMPLEMENTATION_DEFAULT"
      ]
   }
}
